@inject NavigationManager NavigationManager
@implements IDisposable

<div>
    <DxMenu Orientation="@Orientation.Vertical" CssClass="menu">
        <Items>
            <DxMenuItem NavigateUrl="" Text="Home" CssClass="@MenuItemCssClass("/")" IconCssClass="icon icon-home"></DxMenuItem>
            <DxMenuItem NavigateUrl="aichat" Text="yvanGPT" CssClass="@MenuItemCssClass("/aichat")" IconCssClass="icon icon-ai-chat"></DxMenuItem>
            <DxMenuItem NavigateUrl="knowledge-base" Text="Knowledge Base" CssClass="@MenuItemCssClass("/knowledge-base")" IconCssClass="icon icon-doc"></DxMenuItem>
            <DxMenuItem NavigateUrl="vector-store-demo" Text="Vector Store Demo" CssClass="@MenuItemCssClass("/vector-store-demo")" IconCssClass="icon icon-demos"></DxMenuItem>
        </Items>
    </DxMenu>
</div>

@code {
    private string? currentLocalPath;

    protected override void OnInitialized() {
        currentLocalPath = new Uri(NavigationManager.Uri).LocalPath;
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e) {
        currentLocalPath = new Uri(NavigationManager.Uri).LocalPath;
        InvokeAsync(StateHasChanged);
    }

    private string? MenuItemCssClass(string itemPath) {
        return string.Equals(currentLocalPath, itemPath, StringComparison.OrdinalIgnoreCase) ? "menu-item-active" : null;
    }

    public void Dispose() {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}